{
  "server_info": {
    "name": "lambda-mcp-server",
    "version": "1.0.0",
    "description": "AWS Lambda serverless MCP server with SQS integration",
    "protocol_version": "2025-06-18"
  },
  "capabilities": {
    "tools": {
      "list_changed": false
    },
    "resources": {
      "subscribe": false,
      "list_changed": false
    },
    "prompts": {
      "list_changed": false
    },
    "logging": {},
    "elicitation": {
      "enabled": true
    }
  },
  "session_config": {
    "default_ttl_seconds": 1800,
    "max_idle_seconds": 300,
    "cleanup_interval_seconds": 60,
    "max_sessions_per_client": 10
  },
  "streaming_config": {
    "max_response_size_mb": 200,
    "chunk_size_kb": 64,
    "heartbeat_interval_seconds": 30,
    "stream_timeout_seconds": 900
  },
  "sqs_config": {
    "batch_size": 10,
    "max_batching_window_seconds": 5,
    "visibility_timeout_seconds": 90,
    "message_retention_days": 14,
    "correlation_timeout_seconds": 300
  },
  "aws_config": {
    "region": "us-east-1",
    "retry_attempts": 3,
    "timeout_seconds": 30,
    "connection_pool_size": 10
  },
  "logging": {
    "level": "info",
    "format": "json",
    "include_request_id": true,
    "include_session_id": true,
    "sensitive_fields": [
      "authorization",
      "password",
      "secret",
      "token"
    ]
  },
  "monitoring": {
    "enable_xray": true,
    "enable_cloudwatch_metrics": true,
    "custom_metrics": [
      "session_count",
      "tool_call_count",
      "sqs_event_count",
      "streaming_response_count"
    ]
  },
  "security": {
    "max_request_size_mb": 10,
    "rate_limit_per_session": 100,
    "rate_limit_window_seconds": 60,
    "allowed_origins": ["*"],
    "require_session_id": true
  }
}