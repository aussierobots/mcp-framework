        "senior_dev_required": true,
        "team_lead_for_architecture": true,
        "security_review_for_auth": true
      }
    },
    "testing": {
      "unit_tests": {
        "required": true,
        "coverage_threshold": 80,
        "frameworks": ["Jest", "pytest", "RSpec"]
      },
      "integration_tests": {
        "required_for_apis": true,
        "test_environments": ["staging"],
        "frameworks": ["Cypress", "Postman", "TestContainers"]
      },
      "e2e_tests": {
        "schedule": "nightly",
        "critical_paths_only": false,
        "frameworks": ["Playwright", "Selenium"]
      }
    },
    "deployment": {
      "strategy": "blue-green",
      "rollback_threshold": "5% error_rate",
      "canary_percentage": 10,
      "monitoring_window": "30 minutes",
