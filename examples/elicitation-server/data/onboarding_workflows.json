{
  "customer_onboarding_workflows": {
    "personal_account": {
      "name": "Personal Account Onboarding",
      "description": "Standard onboarding flow for individual customers",
      "workflow_id": "personal_onboard_v2.1",
      "steps": [
        {
          "step_id": "personal_info",
          "title": "Personal Information",
          "description": "Basic personal details for account creation",
          "fields": [
            {
              "name": "first_name",
              "type": "string",
              "label": "First Name",
              "required": true,
              "validation": {
                "min_length": 1,
                "max_length": 50,
                "pattern": "^[A-Za-z\\s'-]+$"
              },
              "help_text": "Enter your legal first name"
            },
            {
              "name": "last_name",
              "type": "string",
              "label": "Last Name",
              "required": true,
              "validation": {
                "min_length": 1,
                "max_length": 50,
                "pattern": "^[A-Za-z\\s'-]+$"
              },
              "help_text": "Enter your legal last name"
            },
            {
              "name": "email",
              "type": "email",
              "label": "Email Address",
              "required": true,
              "validation": {
                "format": "email",
                "unique": true
              },
              "help_text": "This will be your login email"
            },
            {
              "name": "phone",
              "type": "phone",
              "label": "Phone Number",
              "required": false,
              "validation": {
                "format": "international",
                "country_code_required": true
              },
              "help_text": "Include country code (e.g., +1-555-123-4567)"
            },
            {
              "name": "date_of_birth",
              "type": "date",
              "label": "Date of Birth",
              "required": true,
              "validation": {
                "min_age": 18,
                "max_age": 120,
                "format": "YYYY-MM-DD"
              },
              "help_text": "Must be 18 or older to create an account"
            }
          ]
        },
        {
          "step_id": "address_info",
          "title": "Address Information",
          "description": "Your residential address for verification",
          "fields": [
            {
              "name": "street_address",
              "type": "string",
              "label": "Street Address",
              "required": true,
              "validation": {
                "min_length": 5,
                "max_length": 200
              }
            },
            {
              "name": "city",
              "type": "string",
              "label": "City",
              "required": true,
              "validation": {
                "min_length": 1,
                "max_length": 100
              }
            },
            {
              "name": "state_province",
              "type": "choice",
              "label": "State/Province",
              "required": true,
              "choices": "us_states_and_provinces",
              "help_text": "Select your state or province"
            },
            {
              "name": "postal_code",
              "type": "string",
              "label": "Postal/ZIP Code",
              "required": true,
              "validation": {
                "pattern": "^[A-Za-z0-9\\s-]{3,10}$"
              }
            },
            {
              "name": "country",
              "type": "choice",
              "label": "Country",
              "required": true,
              "choices": "supported_countries",
              "default": "United States"
            }
          ]
        },
        {
          "step_id": "account_preferences",
          "title": "Account Preferences",
          "description": "Customize your account settings",
          "fields": [
            {
              "name": "preferred_language",
              "type": "choice",
              "label": "Preferred Language",
              "required": true,
              "choices": [
                "English",
                "Spanish",
                "French",
                "German",
                "Italian",
                "Portuguese",
                "Japanese",
                "Chinese (Simplified)",
                "Chinese (Traditional)",
                "Korean"
              ],
              "default": "English"
            },
            {
              "name": "timezone",
              "type": "choice",
              "label": "Time Zone",
              "required": true,
              "choices": "world_timezones",
              "help_text": "Used for scheduling and notifications"
            },
            {
              "name": "communication_preferences",
              "type": "multi_choice",
              "label": "Communication Preferences",
              "required": false,
              "choices": [
                "Email notifications",
                "SMS alerts",
                "Push notifications",
                "Marketing emails",
                "Product updates",
                "Security alerts"
              ],
              "defaults": ["Email notifications", "Security alerts"]
            }
          ]
        },
        {
          "step_id": "security_setup",
          "title": "Security Setup",
          "description": "Secure your account with additional protection",
          "fields": [
            {
              "name": "password",
              "type": "password",
              "label": "Password",
              "required": true,
              "validation": {
                "min_length": 12,
                "require_uppercase": true,
                "require_lowercase": true,
                "require_numbers": true,
                "require_special_chars": true,
                "forbidden_patterns": ["password", "123456", "qwerty"]
              },
              "help_text": "Must be at least 12 characters with mixed case, numbers, and symbols"
            },
            {
              "name": "password_confirm",
              "type": "password",
              "label": "Confirm Password",
              "required": true,
              "validation": {
                "match_field": "password"
              }
            },
            {
              "name": "enable_2fa",
              "type": "boolean",
              "label": "Enable Two-Factor Authentication",
              "required": false,
              "default": true,
              "help_text": "Recommended for enhanced security"
            },
            {
              "name": "security_questions",
              "type": "nested_form",
              "label": "Security Questions",
              "required": true,
              "fields": [
                {
                  "name": "question_1",
                  "type": "choice",
                  "label": "Security Question 1",
                  "required": true,
                  "choices": [
                    "What was the name of your first pet?",
                    "What street did you grow up on?",
                    "What was your mother's maiden name?",
                    "What was the model of your first car?",
                    "What elementary school did you attend?"
                  ]
                },
                {
                  "name": "answer_1",
                  "type": "string",
                  "label": "Answer 1",
                  "required": true,
                  "validation": {
                    "min_length": 2,
                    "max_length": 100
                  }
                }
              ]
            }
          ]
        },
        {
          "step_id": "legal_compliance",
          "title": "Legal & Compliance",
          "description": "Required legal agreements and disclosures",
          "fields": [
            {
              "name": "terms_accepted",
              "type": "boolean",
              "label": "I accept the Terms of Service",
              "required": true,
              "validation": {
                "must_be_true": true
              },
              "help_text": "You must accept the terms to create an account"
            },
            {
              "name": "privacy_accepted",
              "type": "boolean",
              "label": "I accept the Privacy Policy",
              "required": true,
              "validation": {
                "must_be_true": true
              }
            },
            {
              "name": "marketing_consent",
              "type": "boolean",
              "label": "I consent to receive marketing communications",
              "required": false,
              "default": false,
              "help_text": "Optional - you can change this later in settings"
            },
            {
              "name": "age_verification",
              "type": "boolean",
              "label": "I certify that I am 18 years or older",
              "required": true,
              "validation": {
                "must_be_true": true
              }
            }
          ]
        }
      ],
      "completion_actions": [
        "send_welcome_email",
        "create_customer_record",
        "initialize_account_settings",
        "trigger_identity_verification",
        "schedule_onboarding_followup"
      ]
    },
    "business_account": {
      "name": "Business Account Onboarding",
      "description": "Enhanced onboarding flow for business customers",
      "workflow_id": "business_onboard_v2.3",
      "steps": [
        {
          "step_id": "company_info",
          "title": "Company Information",
          "description": "Basic company details and registration information",
          "fields": [
            {
              "name": "company_name",
              "type": "string",
              "label": "Company Legal Name",
              "required": true,
              "validation": {
                "min_length": 2,
                "max_length": 200
              }
            },
            {
              "name": "dba_name",
              "type": "string",
              "label": "Doing Business As (DBA)",
              "required": false,
              "help_text": "If different from legal name"
            },
            {
              "name": "business_type",
              "type": "choice",
              "label": "Business Type",
              "required": true,
              "choices": [
                "Corporation (C-Corp)",
                "S Corporation (S-Corp)",
                "Limited Liability Company (LLC)",
                "Partnership",
                "Sole Proprietorship",
                "Non-Profit Organization",
                "Government Entity",
                "Other"
              ]
            },
            {
              "name": "tax_id",
              "type": "string",
              "label": "Tax ID (EIN/SSN)",
              "required": true,
              "validation": {
                "pattern": "^([0-9]{2}-?[0-9]{7}|[0-9]{3}-?[0-9]{2}-?[0-9]{4})$"
              },
              "help_text": "EIN format: 12-3456789 or SSN for sole proprietorships"
            },
            {
              "name": "industry",
              "type": "choice",
              "label": "Industry",
              "required": true,
              "choices": "naics_industries"
            },
            {
              "name": "annual_revenue",
              "type": "choice",
              "label": "Annual Revenue",
              "required": true,
              "choices": [
                "Under $100,000",
                "$100,000 - $500,000",
                "$500,000 - $1,000,000",
                "$1,000,000 - $5,000,000",
                "$5,000,000 - $10,000,000",
                "$10,000,000 - $50,000,000",
                "Over $50,000,000"
              ]
            },
            {
              "name": "employee_count",
              "type": "number",
              "label": "Number of Employees",
              "required": true,
              "validation": {
                "min": 1,
                "max": 1000000
              }
            }
          ]
        },
        {
          "step_id": "authorized_representative",
          "title": "Authorized Representative",
          "description": "Primary contact and account administrator details",
          "fields": [
            {
              "name": "rep_first_name",
              "type": "string",
              "label": "First Name",
              "required": true
            },
            {
              "name": "rep_last_name",
              "type": "string",
              "label": "Last Name",
              "required": true
            },
            {
              "name": "rep_title",
              "type": "string",
              "label": "Job Title",
              "required": true
            },
            {
              "name": "rep_email",
              "type": "email",
              "label": "Business Email",
              "required": true
            },
            {
              "name": "rep_phone",
              "type": "phone",
              "label": "Business Phone",
              "required": true
            },
            {
              "name": "signing_authority",
              "type": "boolean",
              "label": "I have authority to sign agreements on behalf of this company",
              "required": true,
              "validation": {
                "must_be_true": true
              }
            }
          ]
        },
        {
          "step_id": "compliance_verification",
          "title": "Compliance & Verification",
          "description": "Required compliance information and document uploads",
          "fields": [
            {
              "name": "business_license",
              "type": "file_upload",
              "label": "Business License or Registration",
              "required": true,
              "validation": {
                "file_types": ["pdf", "jpg", "jpeg", "png"],
                "max_size_mb": 10
              }
            },
            {
              "name": "articles_of_incorporation",
              "type": "file_upload",
              "label": "Articles of Incorporation/Organization",
              "required": false,
              "help_text": "Required for corporations and LLCs"
            },
            {
              "name": "kyb_verification",
              "type": "boolean",
              "label": "I consent to Know Your Business (KYB) verification checks",
              "required": true,
              "help_text": "Required for regulatory compliance"
            },
            {
              "name": "pci_compliance_needed",
              "type": "boolean",
              "label": "Does your business need PCI DSS compliance?",
              "required": false,
              "help_text": "Select if you process credit card payments"
            },
            {
              "name": "regulatory_requirements",
              "type": "multi_choice",
              "label": "Applicable Regulatory Requirements",
              "required": false,
              "choices": [
                "GDPR (European customers)",
                "CCPA (California customers)",
                "HIPAA (Healthcare)",
                "SOX (Public companies)",
                "PCI DSS (Payment processing)",
                "FERPA (Educational records)",
                "None applicable"
              ]
            }
          ]
        }
      ],
      "completion_actions": [
        "trigger_kyb_verification",
        "create_business_account",
        "setup_billing_profile",
        "assign_account_manager",
        "schedule_business_onboarding_call"
      ]
    }
  },
  "compliance_forms": {
    "gdpr_data_request": {
      "name": "GDPR Data Subject Request",
      "description": "Form for EU customers to request data access, correction, or deletion",
      "fields": [
        {
          "name": "request_type",
          "type": "choice",
          "label": "Request Type",
          "required": true,
          "choices": [
            "Access my personal data (Article 15)",
            "Correct my personal data (Article 16)",
            "Delete my personal data (Article 17)",
            "Restrict processing (Article 18)",
            "Data portability (Article 20)",
            "Object to processing (Article 21)"
          ]
        },
        {
          "name": "customer_email",
          "type": "email",
          "label": "Email Address on Account",
          "required": true
        },
        {
          "name": "identity_verification",
          "type": "file_upload",
          "label": "Government-issued ID",
          "required": true,
          "help_text": "Required to verify your identity"
        },
        {
          "name": "specific_data",
          "type": "text_area",
          "label": "Specific Data or Records",
          "required": false,
          "help_text": "Describe the specific data you're requesting (optional)"
        }
      ]
    },
    "ccpa_opt_out": {
      "name": "CCPA Do Not Sell Request",
      "description": "California residents can opt out of personal information sales",
      "fields": [
        {
          "name": "california_resident",
          "type": "boolean",
          "label": "I am a California resident",
          "required": true,
          "validation": {
            "must_be_true": true
          }
        },
        {
          "name": "customer_email",
          "type": "email",
          "label": "Email Address",
          "required": true
        },
        {
          "name": "opt_out_all",
          "type": "boolean",
          "label": "Opt out of all personal information sales",
          "required": false,
          "default": true
        },
        {
          "name": "specific_categories",
          "type": "multi_choice",
          "label": "Or select specific categories to opt out",
          "required": false,
          "choices": [
            "Contact information",
            "Demographic information",
            "Commercial information",
            "Biometric information",
            "Internet activity",
            "Location data",
            "Inferences about preferences"
          ]
        }
      ]
    }
  },
  "preference_collection": {
    "notification_preferences": {
      "name": "Notification Preferences",
      "description": "Customize how and when you receive notifications",
      "categories": [
        {
          "category": "Account Security",
          "description": "Critical security notifications",
          "settings": [
            {
              "name": "login_alerts",
              "label": "Login from new device",
              "channels": ["email", "sms", "push"],
              "default_channels": ["email", "sms"],
              "required": true
            },
            {
              "name": "password_changes",
              "label": "Password changes",
              "channels": ["email", "sms"],
              "default_channels": ["email", "sms"],
              "required": true
            },
            {
              "name": "security_issues",
              "label": "Security incidents",
              "channels": ["email", "sms", "push"],
              "default_channels": ["email", "sms", "push"],
              "required": true
            }
          ]
        },
        {
          "category": "Account Activity",
          "description": "Updates about your account activity",
          "settings": [
            {
              "name": "transaction_confirmations",
              "label": "Transaction confirmations",
              "channels": ["email", "sms", "push"],
              "default_channels": ["email"]
            },
            {
              "name": "monthly_statements",
              "label": "Monthly statements",
              "channels": ["email"],
              "default_channels": ["email"]
            },
            {
              "name": "account_changes",
              "label": "Profile or setting changes",
              "channels": ["email", "push"],
              "default_channels": ["email"]
            }
          ]
        },
        {
          "category": "Marketing",
          "description": "Promotional and marketing communications",
          "settings": [
            {
              "name": "product_updates",
              "label": "New features and updates",
              "channels": ["email", "push"],
              "default_channels": []
            },
            {
              "name": "promotional_offers",
              "label": "Special offers and promotions",
              "channels": ["email", "sms"],
              "default_channels": []
            },
            {
              "name": "newsletters",
              "label": "Company newsletter",
              "channels": ["email"],
              "default_channels": []
            }
          ]
        }
      ]
    },
    "accessibility_preferences": {
      "name": "Accessibility Preferences",
      "description": "Customize the interface for your accessibility needs",
      "fields": [
        {
          "name": "high_contrast",
          "type": "boolean",
          "label": "Enable high contrast mode",
          "default": false
        },
        {
          "name": "large_text",
          "type": "boolean",
          "label": "Use larger text sizes",
          "default": false
        },
        {
          "name": "screen_reader",
          "type": "choice",
          "label": "Screen reader compatibility",
          "choices": [
            "None",
            "JAWS",
            "NVDA",
            "VoiceOver",
            "TalkBack",
            "Other"
          ],
          "default": "None"
        },
        {
          "name": "keyboard_navigation",
          "type": "boolean",
          "label": "Enhanced keyboard navigation",
          "default": false
        },
        {
          "name": "reduced_motion",
          "type": "boolean",
          "label": "Reduce motion and animations",
          "default": false
        }
      ]
    }
  },
  "survey_templates": {
    "customer_satisfaction": {
      "name": "Customer Satisfaction Survey",
      "description": "Help us improve our service",
      "fields": [
        {
          "name": "overall_satisfaction",
          "type": "rating",
          "label": "Overall satisfaction with our service",
          "scale": {
            "min": 1,
            "max": 5,
            "labels": {
              "1": "Very Dissatisfied",
              "2": "Dissatisfied", 
              "3": "Neutral",
              "4": "Satisfied",
              "5": "Very Satisfied"
            }
          },
          "required": true
        },
        {
          "name": "service_aspects",
          "type": "matrix_rating",
          "label": "Rate the following aspects",
          "aspects": [
            "Ease of use",
            "Customer support",
            "Response time",
            "Feature completeness",
            "Value for money"
          ],
          "scale": {
            "min": 1,
            "max": 5
          },
          "required": true
        },
        {
          "name": "recommendation_score",
          "type": "rating",
          "label": "How likely are you to recommend us? (Net Promoter Score)",
          "scale": {
            "min": 0,
            "max": 10,
            "labels": {
              "0": "Not at all likely",
              "10": "Extremely likely"
            }
          },
          "required": true
        },
        {
          "name": "improvement_suggestions",
          "type": "text_area",
          "label": "What could we improve?",
          "required": false,
          "validation": {
            "max_length": 1000
          }
        }
      ]
    }
  }
}